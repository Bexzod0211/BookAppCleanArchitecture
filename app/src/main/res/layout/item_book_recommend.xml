    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/card_img_cover"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="260dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/let_me_in"
            android:elevation="2dp"
            android:scaleType="fitXY"
            android:id="@+id/img_cover"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_img_cover"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintEnd_toEndOf="@id/card_img_cover"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        tools:text="Aruvi The Horseman"
        android:elevation="2dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/txt_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintTop_toBottomOf="@id/txt_author"
        android:drawableEnd="@drawable/ic_star"
        android:elevation="2dp"
        tools:text="4.7"
        android:textColor="#F0AC62"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:drawablePadding="4dp"
        android:id="@+id/txt_star"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:elevation="2dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="By OlmosJt"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/txt_author"
        />

