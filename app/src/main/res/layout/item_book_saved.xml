<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="8dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp"
    android:background="#F0F6FB">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/card_img_cover"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="240dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/let_me_in"
            android:elevation="2dp"
            android:scaleType="fitXY"
            android:id="@+id/img_cover"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/alike_angular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/card_img_cover"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintTop_toBottomOf="@id/card_img_cover"
        tools:text="Aruvi The Horseman" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintEnd_toEndOf="@id/card_img_cover"
        app:layout_constraintTop_toBottomOf="@id/txt_author"
        android:drawableEnd="@drawable/ic_star"
        android:elevation="2dp"
        tools:text="4.7"
        android:textColor="#F0AC62"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:drawablePadding="4dp"
        android:id="@+id/txt_star"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_img_cover"
        app:layout_constraintEnd_toEndOf="@id/card_img_cover"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:elevation="2dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="By OlmosJt"
        android:maxLines="1"
        android:fontFamily="@font/alike_angular"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/txt_author"
        />

</androidx.constraintlayout.widget.ConstraintLayout>